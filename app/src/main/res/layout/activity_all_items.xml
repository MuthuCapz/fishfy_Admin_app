<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:context=".ui.activities.AllItemsActivity">

        <ImageView
            android:id="@+id/Back_Button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/image_description"
            android:src="@drawable/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:text="All Products"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/allItemRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:itemCount="10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/textView16"

            tools:listitem="@layout/item_all_item" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/blue"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="Save"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/allItemRecyclerView" />
        <TextView
            android:id="@+id/Orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Details"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black"
            android:layout_marginStart="130dp"
            android:textSize="25dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/lato_bold"
            app:layout_constraintTop_toBottomOf="@id/button"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/allItemRecyclerView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:itemCount="10"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Orders"
            tools:listitem="@layout/item_order_details" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
